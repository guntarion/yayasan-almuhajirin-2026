  minatKomunitas      String              @db.Text  // JSON array of MinatKomunitasSehat

  // Event participation
  sudahHadir          Boolean             @default(false)

  // Notes
  catatan             String?             @db.Text

  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt

  // Relations
  registrant          SenamRegistrant     @relation(fields: [registrantId], references: [id], onDelete: Cascade)

  @@index([registrantId])
  @@index([namaLengkap])
  @@index([nomorKupon])
  @@map("senam_participants")
}

