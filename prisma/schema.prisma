  durasiTidur     String?         // e.g., "2 jam", "1.5 jam"
  catatanTidur    String?         @db.Text

  // === KEGIATAN HARI INI (Checklist - stored as JSON) ===
  kegiatanHariIni String?         @db.Text  // JSON array: ["mengaji", "hafalan", "berenang", etc.]

  // === CATATAN UMUM GURU ===
  catatanGuru     String?         @db.Text

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  anak            DaycareAnak     @relation(fields: [anakId], references: [id], onDelete: Cascade)

  @@unique([anakId, tanggal])
  @@index([tanggal])
  @@index([anakId])
  @@map("daycare_daily_report")
}

