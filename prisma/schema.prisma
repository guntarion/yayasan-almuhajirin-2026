// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================
// ENUMS
// ===========================================

enum Role {
  admin
  pengurus
  pengawas
  pembina
  kepalabidang
  kepalaunit
  operatorunit
  sekretariat
  member
  moderator
  editor
  viewer
  guest
}

enum Gender {
  lelaki
  perempuan
}

enum ArticleStatus {
  DRAFT
  IN_REVIEW
  SCHEDULED
  PUBLISHED
  ARCHIVED
  REJECTED
}

// ===========================================
// UNIT MODEL
// ===========================================

model Unit {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  subdomain   String   @unique
  logo        String?
  color       String?  @default("#0ea5e9")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users       User[]
  articles    Article[]
  categories  Category[]
  media       Media[]
  galleries   Gallery[]

  @@map("units")
}

// ===========================================
// USER MODEL (Updated with blog relations)
// ===========================================

model User {
  id                String    @id @default(cuid())
  name              String
  email             String    @unique
  emailVerified     DateTime?
  password          String?
  image             String?
  role              Role      @default(member)
  namaPanggilan     String?
  nomerHandphone    String?
  gender            Gender?
  tanggalLahir      DateTime?
  resetToken        String?
  resetTokenExpiry  DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Unit relation
  unitId            String?
  unit              Unit?     @relation(fields: [unitId], references: [id])

  // NextAuth relations
  accounts          Account[]
  sessions          Session[]

  // Blog relations
  articles          Article[]
  galleries         Gallery[]
  media             Media[]
  articleRevisions  ArticleRevision[]

  @@index([unitId])
  @@map("users")
}

// ===========================================
// NEXTAUTH MODELS
// ===========================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ===========================================
// BLOG: CATEGORY MODEL
// ===========================================

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String
  description String?
  icon        String?
  color       String?   @default("#6b7280")
  order       Int       @default(0)
  isGlobal    Boolean   @default(false)
  unitId      String?
  parentId    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  unit        Unit?     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  articles    Article[]

  @@unique([slug, unitId])
  @@index([unitId])
  @@index([parentId])
  @@index([isGlobal])
  @@map("categories")
}

// ===========================================
// BLOG: TAG MODEL
// ===========================================

model Tag {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  articles  ArticleTag[]

  @@map("tags")
}

// ===========================================
// BLOG: ARTICLE MODEL
// ===========================================

model Article {
  id            String        @id @default(cuid())
  title         String
  slug          String
  content       String        @db.Text
  excerpt       String?       @db.VarChar(500)
  featuredImage String?
  status        ArticleStatus @default(DRAFT)
  viewCount     Int           @default(0)
  readingTime   Int?
  isPinned      Boolean       @default(false)
  isFeatured    Boolean       @default(false)

  // SEO fields
  metaTitle       String?     @db.VarChar(70)
  metaDescription String?     @db.VarChar(160)
  metaKeywords    String?
  canonicalUrl    String?

  // Scheduling
  publishedAt   DateTime?
  scheduledAt   DateTime?

  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Foreign keys
  authorId      String
  categoryId    String
  unitId        String

  // Relations
  author        User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category      Category @relation(fields: [categoryId], references: [id])
  unit          Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  tags          ArticleTag[]
  galleries     ArticleGallery[]
  revisions     ArticleRevision[]

  @@unique([slug, unitId])
  @@index([unitId])
  @@index([authorId])
  @@index([categoryId])
  @@index([status])
  @@index([publishedAt])
  @@index([createdAt])
  @@map("articles")
}

// ===========================================
// BLOG: ARTICLE-TAG JUNCTION
// ===========================================

model ArticleTag {
  articleId String
  tagId     String

  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([articleId, tagId])
  @@map("article_tags")
}

// ===========================================
// BLOG: ARTICLE REVISION MODEL
// ===========================================

model ArticleRevision {
  id        String   @id @default(cuid())
  articleId String
  title     String
  content   String   @db.Text
  excerpt   String?  @db.VarChar(500)
  editedById String
  createdAt DateTime @default(now())

  // Relations
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  editedBy  User    @relation(fields: [editedById], references: [id])

  @@index([articleId])
  @@map("article_revisions")
}

// ===========================================
// BLOG: MEDIA MODEL
// ===========================================

model Media {
  id           String   @id @default(cuid())
  filename     String
  originalName String
  url          String
  thumbnailUrl String?
  mimeType     String
  size         Int
  width        Int?
  height       Int?
  alt          String?
  caption      String?
  folder       String?  @default("uploads")
  uploadedById String
  unitId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  uploadedBy   User     @relation(fields: [uploadedById], references: [id])
  unit         Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  galleryMedia GalleryMedia[]

  @@index([unitId])
  @@index([uploadedById])
  @@index([mimeType])
  @@index([folder])
  @@map("media")
}

// ===========================================
// BLOG: GALLERY MODEL
// ===========================================

model Gallery {
  id          String   @id @default(cuid())
  title       String
  slug        String
  description String?  @db.Text
  coverImage  String?
  eventDate   DateTime?
  isPublished Boolean  @default(false)
  authorId    String
  unitId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  author      User     @relation(fields: [authorId], references: [id])
  unit        Unit     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  media       GalleryMedia[]
  articles    ArticleGallery[]

  @@unique([slug, unitId])
  @@index([unitId])
  @@index([authorId])
  @@index([isPublished])
  @@map("galleries")
}

// ===========================================
// BLOG: GALLERY-MEDIA JUNCTION
// ===========================================

model GalleryMedia {
  galleryId String
  mediaId   String
  order     Int    @default(0)
  caption   String?

  gallery   Gallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  media     Media   @relation(fields: [mediaId], references: [id], onDelete: Cascade)

  @@id([galleryId, mediaId])
  @@map("gallery_media")
}

// ===========================================
// BLOG: ARTICLE-GALLERY JUNCTION
// ===========================================

model ArticleGallery {
  articleId String
  galleryId String

  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  gallery   Gallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)

  @@id([articleId, galleryId])
  @@map("article_galleries")
}

// ===========================================
// KEUANGAN: ENUMS
// ===========================================

enum JenisProgram {
  pendapatan
  pengeluaran
}

enum StatusProgram {
  draft
  aktif
  selesai
  ditunda
  batal
}

enum SifatProgram {
  rutin
  proyek
  insidental
}

enum TransactionType {
  income
  expense
}

enum PaymentMethod {
  cash
  bank
  transfer
}

enum JournalEntryType {
  debit
  credit
}

enum AccountCategory {
  aset
  kewajiban
  aset_bersih
  pendapatan
  beban
}

enum NormalBalance {
  debit
  credit
}

enum RestrictionType {
  temporary
  permanent
}

// ===========================================
// KEUANGAN: FISCAL PERIOD (Periode Tahun Fiskal)
// ===========================================

model FiscalPeriod {
  id        String   @id @default(cuid())
  year      Int      @unique
  name      String   // e.g., "Tahun Fiskal 2025"
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(false)
  isClosed  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  programs     ProgramKerja[]
  transactions Transaction[]

  @@map("fiscal_periods")
}

// ===========================================
// KEUANGAN: KODE AKUN (Chart of Accounts)
// ===========================================

model KodeAkun {
  kode            String          @id
  nama            String
  kategori        AccountCategory
  subKategori     String?
  normalBalance   NormalBalance
  isContraAccount Boolean         @default(false)
  isRestricted    Boolean         @default(false)
  restrictionType RestrictionType?
  deskripsi       String?
  isActive        Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  programItems      ProgramItem[]   @relation("ProgramItemAccount")
  pairedProgramItems ProgramItem[]  @relation("ProgramItemPairedAccount")
  journalEntries    JournalEntry[]

  @@index([kategori])
  @@index([isActive])
  @@map("kode_akun")
}

// ===========================================
// KEUANGAN: BIDANG (Divisions)
// ===========================================

model Bidang {
  kode      String   @id
  nama      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  unitKerja    UnitKerja[]
  programs     ProgramKerja[]
  transactions Transaction[]

  @@map("bidang")
}

// ===========================================
// KEUANGAN: UNIT KERJA (Sub-divisions)
// ===========================================

model UnitKerja {
  kode       String   @id
  nama       String
  bidangKode String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  bidang       Bidang         @relation(fields: [bidangKode], references: [kode])
  programs     ProgramKerja[]
  transactions Transaction[]

  @@index([bidangKode])
  @@map("unit_kerja")
}

// ===========================================
// KEUANGAN: PROGRAM KERJA
// ===========================================

model ProgramKerja {
  id             String        @id @default(cuid())
  kode           String        @unique
  nama           String
  bidangKode     String
  unitKerjaKode  String
  jenis          JenisProgram
  status         StatusProgram @default(draft)
  sifat          SifatProgram  @default(rutin)
  kategori       String?       // e.g., "Gaji & Kompensasi", "Operasional", etc.
  pic            String?
  deskripsi      String?       @db.Text
  targetCapaian  String?       @db.Text
  fiscalYear     Int           // Year of the program e.g. 2026
  fiscalPeriodId String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relations
  bidang       Bidang        @relation(fields: [bidangKode], references: [kode])
  unitKerja    UnitKerja     @relation(fields: [unitKerjaKode], references: [kode])
  fiscalPeriod FiscalPeriod  @relation(fields: [fiscalPeriodId], references: [id])
  items        ProgramItem[]
  transactions Transaction[]

  @@index([bidangKode])
  @@index([unitKerjaKode])
  @@index([fiscalPeriodId])
  @@index([fiscalYear])
  @@index([jenis])
  @@index([status])
  @@map("program_kerja")
}

// ===========================================
// KEUANGAN: PROGRAM ITEMS (Detail Item Program)
// ===========================================

model ProgramItem {
  id               String   @id @default(cuid())
  programId        String
  kodeItem         String   // e.g., "1.2.1", "OT-01-01"
  namaItem         String
  keterangan       String?  @db.Text
  volume           Decimal  @default(1) @db.Decimal(10, 2)
  satuan           String   @default("unit")
  hargaSatuan      Decimal  @db.Decimal(15, 2)
  jumlah           Decimal  @db.Decimal(15, 2) // volume x hargaSatuan
  kodeAkun         String
  kodeAkunPasangan String?  // For auto-journal
  isRestricted     Boolean  @default(false)
  restrictionType  RestrictionType?
  realisasi        Decimal  @default(0) @db.Decimal(15, 2)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Monthly budget distribution (optional)
  jan Decimal? @db.Decimal(15, 2)
  feb Decimal? @db.Decimal(15, 2)
  mar Decimal? @db.Decimal(15, 2)
  apr Decimal? @db.Decimal(15, 2)
  mei Decimal? @db.Decimal(15, 2)
  jun Decimal? @db.Decimal(15, 2)
  jul Decimal? @db.Decimal(15, 2)
  agu Decimal? @db.Decimal(15, 2)
  sep Decimal? @db.Decimal(15, 2)
  okt Decimal? @db.Decimal(15, 2)
  nov Decimal? @db.Decimal(15, 2)
  des Decimal? @db.Decimal(15, 2)

  // Relations
  program      ProgramKerja  @relation(fields: [programId], references: [id], onDelete: Cascade)
  akun         KodeAkun      @relation("ProgramItemAccount", fields: [kodeAkun], references: [kode])
  akunPasangan KodeAkun?     @relation("ProgramItemPairedAccount", fields: [kodeAkunPasangan], references: [kode])
  transactions Transaction[]

  @@unique([programId, kodeItem])
  @@index([programId])
  @@index([kodeAkun])
  @@map("program_items")
}

// ===========================================
// KEUANGAN: TRANSACTIONS
// ===========================================

model Transaction {
  id              String          @id @default(cuid())
  code            String          @unique // Transaction code e.g. TRX-202601-001
  transactionDate DateTime
  type            TransactionType
  amount          Decimal         @db.Decimal(15, 2)
  description     String
  entityName      String?         // Supplier, donor, etc.
  paymentMethod   PaymentMethod   @default(bank)
  isRestricted    Boolean         @default(false)
  restrictionType RestrictionType?
  autoJournal     Boolean         @default(true)
  attachmentPath  String?
  notes           String?         @db.Text
  createdBy       String?
  fiscalPeriodId  String
  bidangKode      String?
  unitKerjaKode   String?
  programKerjaId  String?
  programItemId   String?
  isVoided        Boolean         @default(false)
  voidReason      String?
  voidedAt        DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  fiscalPeriod   FiscalPeriod   @relation(fields: [fiscalPeriodId], references: [id])
  bidang         Bidang?        @relation(fields: [bidangKode], references: [kode])
  unitKerja      UnitKerja?     @relation(fields: [unitKerjaKode], references: [kode])
  programKerja   ProgramKerja?  @relation(fields: [programKerjaId], references: [id])
  programItem    ProgramItem?   @relation(fields: [programItemId], references: [id])
  journalEntries JournalEntry[]

  @@index([transactionDate])
  @@index([fiscalPeriodId])
  @@index([bidangKode])
  @@index([unitKerjaKode])
  @@index([programKerjaId])
  @@index([programItemId])
  @@index([type])
  @@index([isVoided])
  @@map("transactions")
}

// ===========================================
// KEUANGAN: JOURNAL ENTRIES (Double-Entry)
// ===========================================

model JournalEntry {
  id            String           @id @default(cuid())
  transactionId String
  entryType     JournalEntryType
  kodeAkun      String
  amount        Decimal          @db.Decimal(15, 2)
  description   String?
  createdAt     DateTime         @default(now())

  // Relations
  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  akun        KodeAkun    @relation(fields: [kodeAkun], references: [kode])

  @@index([transactionId])
  @@index([kodeAkun])
  @@map("journal_entries")
}

// ===========================================
// JAMAAH: ENUMS
// ===========================================

enum SebutanJamaah {
  Pak
  Bu
  Mas
  Mbak
  Kel
  Ustadz
  Ustadzah
  Haji
  Hajah
}

enum AlamatRW {
  RW6
  RW8
  RW9
  RWLainnya
}

enum AlamatWilayah {
  Rewwin
  Lainnya
}

// ===========================================
// JAMAAH: MODEL UTAMA
// ===========================================

model Jamaah {
  id                String          @id @default(cuid())
  nama              String
  sebutan           SebutanJamaah?
  anonymizeDisplay  Boolean         @default(false) // Jika true, tampilkan nama tersamarkan
  nomerHandphone    String?
  email             String?
  alamatJalan       String?
  alamatRW          AlamatRW?
  alamatRT          String?         // RT 1-20, format bebas
  alamatWilayah     AlamatWilayah?
  alamatDetail      String?         // Detail alamat tambahan jika wilayah Lainnya
  gender            Gender?
  tanggalLahir      DateTime?
  profesi           String?

  // Status flags untuk berbagai unit
  isJamaahAktif     Boolean         @default(true)  // Status aktif di masjid
  isPengunjungKlinik Boolean        @default(false) // Pernah/sering ke poliklinik
  isDonatur         Boolean         @default(false) // Donatur LAZMU

  catatan           String?         @db.Text        // Catatan umum

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  // Relations untuk unit-specific data
  riwayatKlinik     RiwayatKlinik[]
  donasiLazmu       DonasiJamaah[]
  pasienKlinik      PasienKlinik?     // Link ke data pasien klinik (jika terdaftar)

  @@index([isJamaahAktif])
  @@index([isPengunjungKlinik])
  @@index([isDonatur])
  @@index([alamatRW])
  @@index([alamatWilayah])
  @@map("jamaah")
}

// ===========================================
// JAMAAH: RIWAYAT KLINIK (Legacy - untuk backward compatibility)
// ===========================================

model RiwayatKlinik {
  id              String    @id @default(cuid())
  jamaahId        String
  tanggalKunjungan DateTime
  keluhan         String?   @db.Text
  diagnosa        String?   @db.Text
  tindakan        String?   @db.Text
  obat            String?   @db.Text
  dokter          String?
  catatan         String?   @db.Text
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  jamaah          Jamaah    @relation(fields: [jamaahId], references: [id], onDelete: Cascade)

  @@index([jamaahId])
  @@index([tanggalKunjungan])
  @@map("riwayat_klinik")
}

// ===========================================
// POLIKLINIK: ENUMS
// ===========================================

enum StatusPernikahan {
  belum_menikah
  menikah
  cerai_hidup
  cerai_mati
}

enum StatusKunjungan {
  menunggu
  dalam_pemeriksaan
  selesai
  dirujuk
  batal
}

enum JenisPelayanan {
  umum
  gigi
  konsultasi
}

enum GolonganDarah {
  A
  B
  AB
  O
  tidak_tahu
}

// ===========================================
// POLIKLINIK: MASTER PASIEN
// ===========================================

model PasienKlinik {
  id                      String            @id @default(cuid())
  nomorRM                 String            @unique  // Auto-generated: RM-YYMM-XXXX

  // Link to Jamaah (optional - for lookup)
  jamaahId                String?           @unique

  // Data Identitas Inti
  namaLengkap             String
  jenisKelamin            Gender
  tanggalLahir            DateTime?
  tempatLahir             String?
  golonganDarah           GolonganDarah?

  // Kontak
  alamat                  String?           @db.Text
  nomorHP                 String?
  nomorHPDarurat          String?           // Nomor keluarga untuk keadaan darurat

  // Data Tambahan
  statusPernikahan        StatusPernikahan?
  pekerjaan               String?

  // Data Administratif
  tanggalPertamaKunjungan DateTime          @default(now())
  penanggungJawab         String?           // Nama penanggung jawab (untuk anak/lansia)
  hubunganPenanggungJawab String?           // Hubungan dengan penanggung jawab

  // Catatan Medis Penting
  riwayatAlergi           String?           @db.Text  // WAJIB ditampilkan prominent
  riwayatPenyakitKronis   String?           @db.Text  // Diabetes, hipertensi, dll
  catatanKhusus           String?           @db.Text  // Disabilitas, kondisi khusus

  // Status
  isAktif                 Boolean           @default(true)

  createdAt               DateTime          @default(now())
  updatedAt               DateTime          @updatedAt
  createdBy               String?           // User ID yang mendaftarkan

  // Relations
  jamaah                  Jamaah?           @relation(fields: [jamaahId], references: [id])
  kunjungan               KunjunganKlinik[]

  @@index([namaLengkap])
  @@index([nomorHP])
  @@index([isAktif])
  @@index([tanggalPertamaKunjungan])
  @@map("pasien_klinik")
}

// ===========================================
// POLIKLINIK: KUNJUNGAN PASIEN (Visit/Encounter)
// ===========================================

model KunjunganKlinik {
  id                  String          @id @default(cuid())
  nomorKunjungan      String          @unique  // Auto: KJ-YYMMDD-XXX

  pasienId            String
  tanggalKunjungan    DateTime        @default(now())

  // Info Kunjungan
  jenisPelayanan      JenisPelayanan  @default(umum)
  dokter              String?         // Nama dokter/tenaga medis

  // Keluhan (quick entry at registration)
  keluhanUtama        String?         @db.Text

  // Status
  statusKunjungan     StatusKunjungan @default(menunggu)
  nomorAntrian        Int?            // Nomor antrian hari itu

  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  // Relations
  pasien              PasienKlinik    @relation(fields: [pasienId], references: [id], onDelete: Cascade)
  rekamMedis          RekamMedisKlinik?

  @@index([pasienId])
  @@index([tanggalKunjungan])
  @@index([statusKunjungan])
  @@index([dokter])
  @@map("kunjungan_klinik")
}

// ===========================================
// POLIKLINIK: REKAM MEDIS (Medical Record)
// ===========================================

model RekamMedisKlinik {
  id                  String          @id @default(cuid())
  kunjunganId         String          @unique

  // === ANAMNESIS ===
  keluhanUtama        String?         @db.Text  // Chief complaint (detail)
  riwayatPenyakitSekarang String?     @db.Text  // History of present illness
  riwayatPenyakitDahulu   String?     @db.Text  // Past medical history
  riwayatAlergi       String?         @db.Text  // Allergies (HIGHLIGHTED)
  riwayatObat         String?         @db.Text  // Current medications

  // === PEMERIKSAAN FISIK ===
  tekananDarahSistolik  Int?          // mmHg
  tekananDarahDiastolik Int?          // mmHg
  nadi                Int?            // bpm
