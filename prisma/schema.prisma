  nama            String
  nomorHP         String
  email           String?
  alamat          String            @db.Text

  // Confirmation Status (GRATIS event - no payment, just confirmation)
  statusKonfirmasi StatusKonfirmasi @default(belum_terkonfirmasi)
  tanggalKonfirmasi DateTime?

